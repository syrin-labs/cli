{
  "name": "syrin",
  "version": "1.0.0",
  "description": "Syrin is a runtime intelligence system that makes MCP servers debuggable, testable, and safe to run in production.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.json -f",
    "syrin": "sh -c 'npm run build && node dist/index.js \"$@\"' --",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnkanAI/syrin.git"
  },
  "author": "Ankan AI Labs Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AnkanAI/syrin/issues"
  },
  "homepage": "https://github.com/AnkanAI/syrin#readme",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^13.1.0",
    "js-yaml": "^4.1.1",
    "openai": "^6.15.0",
    "react": "^19.2.3",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  }
}
